{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2020",
    "lib": ["esnext", "dom"],
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "sourceMap": true,
    "skipLibCheck": true
  }
}
